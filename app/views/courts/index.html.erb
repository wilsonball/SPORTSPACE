<div class="row">
  	<div class="col-md-3">
  		<ul class="sidebar-list">
  	  		<li class="sidebar-item"><%= link_to "Nearby Courts", courts_path, class: "sidebar-link active" %></li>
  	  		<li class="sidebar-item"><%= link_to "Upcoming Games", courts_path, class: "sidebar-link" %></li>
  		</ul>
  	</div>
  	<div class="col-md-9">
  	  	<div class="panel panel-default">
  	  		<div class="panel-heading">
  	  			Listings
  	  		</div>
  	  		<div class="panel-body">
	  	  		<% @courts.each do |court| %>
	  	  		  	<div class="row">
	  	  		  		<div class="col-md-2">
	  	  		  			<%= image_tag court.photos[0].image.url(:thumb) if court.photos.length > 0 %>
	  	  		  		</div>  	  		  		
	  	  		  		<div class="col-md-7">
	  	  		  			<h4><%= court.listing_name %></h4> 
	  	  		  		</div>
	  	  		  		<div class="col-md-3 right">
	  	  		  			<%= link_to "Update", edit_court_path(court), class: "btn btn-primary" %>
	  	  		  		</div>  	  		  		
	  	  		  	</div>
	              <hr>
	  	  		<% end %>

  		</div>
  	</div>
</div>