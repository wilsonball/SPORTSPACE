
<body style="background-position: top right; background-size: cover;
  background-attachment: fixed; background-image:url('http://sportsplex.phantomclubs.com/assets/images/basketball-floor.jpg');">
  <div class="container-home">
	<div class="jumbotron-home">
	<div class="jumbotron-text text-center">
		<h1>Find people playing pick-up basketball nearby.</h1>
	</div>
	<div class="container mainsearchbar">
		<%= form_tag search_path, id: "search_form", method: :get do %>
		<div class="row">
			<div class="col-md-4 col-md-offset-1">
				<%= text_field_tag :name, params[:name], placeholder: "Name (ex. 24 Hour Fitness)", class: "form-control" %>
			</div>
			<div class="col-md-4">
				<%= text_field_tag :address, params[:address], placeholder: "Location (ex. Diamond Bar, CA)", class: "form-control" %>
			</div>
			<div>
				<%= text_field_tag :coords, params[:coords] %>
			</div>
			<!--<div class="col-md-4">
				<%= text_field_tag :time, params[:time], placeholder: "ex. YYYY-MM-DD 00:00", readonly: true, class: "form-control" %>
			</div>-->
			<div class="col-md-2 text-center">
				<%= submit_tag "Search", class: "btn btn-primary wide75", id: "use-location-button" %>
			</div>
		</div>
		<% end %>
	</div>
	</div>
</div>
<br>

<script type="text/javascript">
	$(document).ready(function() {
		$('#time').datetimepicker({
				formatTime:'g:i a',
				format:'m/d/Y g:i a',
        minDate: 0,

		});
	});

</script>
